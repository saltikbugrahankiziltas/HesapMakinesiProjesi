<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/shape_1">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal" />
        <ImageView
            android:id="@+id/ibu_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ibu_logo"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="200dp"
            android:text="Hesap Makinesi Projesi"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="serif"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="110dp">

        <Button
            android:id="@+id/history"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/btn_3"
            android:onClick="anyButton"
            android:text="Geçmiş"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textColorHint="@color/black"
            android:textSize="40sp" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/AC"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_3"
                android:onClick="anyButton"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/parantez"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_3"
                android:onClick="anyButton"
                android:text="()"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/yuzde"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_3"
                android:onClick="anyButton"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/bolum"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_4"
                android:onClick="anyButton"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/yedi"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/sekiz"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/dokuz"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/carpim"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_4"
                android:onClick="anyButton"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/dort"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/bes"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/altı"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/cikarma"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_4"
                android:onClick="anyButton"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bir"
                android:layout_width="10dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/iki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/uc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_1"
                android:onClick="anyButton"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/toplama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_4"
                android:onClick="anyButton"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/sifir"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_2"
        android:onClick="anyButton"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/virgul"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_1"
        android:onClick="anyButton"
        android:text=","
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/esittir"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="289dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_4"
        android:onClick="anyButton"
        android:text="="
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold" />






</RelativeLayout>